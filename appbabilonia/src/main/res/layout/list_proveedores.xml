<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:weightSum="100">

    <TextView
        android:id="@+id/tv_proveedor_id"
        android:layout_width="25dp"
        android:layout_height="70dp"
        android:textSize="30dp"
        android:gravity="center"
        android:textAlignment="center">

    </TextView>


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:layout_weight="100"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_proveedor_razon_social"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_weight="20"
            android:gravity="center"
            android:textAlignment="center"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/tv_proveedor_ruc"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_weight="20"
            android:gravity="center"
            android:textAlignment="center"
            android:textSize="18dp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:gravity="center"
            android:text="@string/list_proveedores_tipo_persona"
            android:textSize="10dp" />

        <TextView
            android:id="@+id/tv_proveedor_tipo_persona"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:gravity="center"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:gravity="center"
            android:text="@string/list_proveedores_telefono"
            android:textSize="10dp" />

        <TextView
            android:id="@+id/tv_proveedor_telefono"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:gravity="center"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>